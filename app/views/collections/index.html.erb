<h2>Collections</h2>
<ul>
  <% Collection.all.each do |col| %>
  <li><%= link_to col.name, col %></li>
  <% end %>
</ul>

<h2>Articles</h2>
<ul>
  <% if @articles.flatten.count > 0 %>
    <% @articles.flatten.each do |a| %>
    <li><%= link_to a.title, "http://#{a.url}" %></li>
    <% end %>
  <% else %>
    <%= link_to 'Create New Article', new_user_collection_article_path(1) %>
  <% end %>
</ul>
