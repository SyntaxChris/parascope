<div class="collection">
<ul class ='group'>
<h2>My Top Links <%= link_to '+', new_collection_article_path(current_user.collections.find_by_name('Unsorted')) %></h2>
<ul>
  <% if @articles.flatten.count > 0 %>
    <% @articles.flatten.each do |a| %>
    <li><%= link_to a.title, a.linkify, :target => "_blank" %></li>
    <% end %>
  <% end %>
</ul>
</div>
</div>
